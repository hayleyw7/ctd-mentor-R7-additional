<%= form_with(model: customer, local: true, class: "mb-3") do |form| %>
  <% if customer.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <span class="me-1"><%= icon('fa-solid', 'user')%></span>
    <%= form.label :first_name, class: "form-label" do %>
      <%= :first_name.to_s.titleize %>
    <% end %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <span class="me-1"><%= icon('fa-solid', 'user')%></span>
    <%= form.label :last_name, class: "form-label" do %>
      <%= :last_name.to_s.titleize %>
    <% end %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <span class="me-1"><%= icon('fa-solid', 'phone')%></span>
    <%= form.label :phone, class: "form-label" do %>
      <%= :phone.to_s.titleize %>
    <% end %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>

  <div class="mb-3">
    <span class="me-1"><%= icon('fa-solid', 'envelope')%></span>
    <%= form.label :email, class: "form-label" do %>
      <%= :email.to_s.titleize %>
    <% end %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>
