<div id="<%= dom_id order %>">
  <p>
    <strong>Customer:</strong>
    <%= link_to order.customer.full_name, customer_path(order.customer) %>
  </p>

  <p>
    <strong>Product Name:</strong>
    <%= order.product_name %>
  </p>

  <p>
    <strong>Product Count:</strong>
    <%= order.product_count %>
  </p>
</div>
