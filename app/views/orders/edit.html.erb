<h2>Editing order</h2>

<%= render "form", order: @order %>

<div class="d-flex gap-3 justify-content-end">
  <%= button_to "View", order_path(@order), method: :get, class: "btn btn-secondary" %>
  <%= button_to "All Orders", orders_path, method: :get, class: "btn btn-primary" %>
  <%= button_to "Delete", order_path(@order), method: :delete, data: { confirm: "Are you sure you want to delete this order?" }, class: "btn btn-danger" %>
</div>
