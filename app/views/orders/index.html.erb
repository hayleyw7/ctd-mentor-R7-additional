<p class="text-success"><%= notice %></p>

<h2>Orders</h2>

<div class="container-fluid">
  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="card border-0 mt-3">
          <div class="card-header bg-info fw-bold fs-5 border-0">
            <%= link_to order.product_name, order_path(order) %>
          </div>
          <div class="card-body bg-light">
            <p class="card-text"><strong>Quantity:</strong> <%= order.product_count %></p>
            <p class="card-text"><strong>Customer:</strong> <%= link_to order.customer.full_name, customer_path(order.customer) %></p>
          </div>
          <div class="card-footer border-0 d-flex justify-content-between bg-info">
            <%= button_to "Edit", edit_order_path(order), method: :get, class: "btn btn-warning btn-sm" %>
            <%= button_to "Delete", order_path(order), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= button_to "New Order", new_order_path, method: :get, class: "btn btn-success mt-3" %>
