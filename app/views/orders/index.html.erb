<p class="text-success"><%= notice %></p>

<h2>Orders</h2>

<table class="table table-borderless">
  <thead class="table-light">
    <tr>
      <th class="w-25">Product</th>
      <th class="w-25">Quantity</th>
      <th class="w-25">Customer</th>
      <th colspan="3" class="w-25"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.product_name %></td>
        <td><%= order.product_count %></td>
        <td><%= link_to order.customer.full_name, customer_path(order.customer) %></td>
        <td><%= button_to "Show", order_path(order), method: :get, class: "btn btn-primary btn-sm" %></td>
        <td><%= button_to "Edit", edit_order_path(order), method: :get, class: "btn btn-warning btn-sm" %></td>
        <td><%= button_to "Delete", order_path(order), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to "New order", new_order_path, method: :get, class: "btn btn-success" %>
